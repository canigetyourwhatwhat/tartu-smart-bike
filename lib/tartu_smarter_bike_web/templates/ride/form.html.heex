<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <p>
    <%= label f, :id_code, "Bike ID" %>
    <br>
    <%= text_input f, :id_code %>
    <%= error_tag f, :id_code %>
  </p>

  <div>
    <%= submit "Unlock" %>
  </div>
<% end %>
